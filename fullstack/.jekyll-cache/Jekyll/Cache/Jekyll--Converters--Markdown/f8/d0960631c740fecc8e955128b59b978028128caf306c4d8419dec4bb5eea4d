    <span class="k">echo</span> <span class="s2">"&lt;div style='color: blue'&gt;"</span><span class="mf">.</span><span class="nv">$data</span><span class="p">[</span><span class="s2">"info"</span><span class="p">]</span><span class="mf">.</span><span class="s2">"&lt;/div&gt;"</span><span class="p">;</span>
<span class="p">}</span>
<span class="cp">?&gt;</span>

<span class="nt">&lt;form</span> <span class="na">action=</span><span class="s">"index.php"</span> <span class="na">method=</span><span class="s">"get"</span><span class="nt">&gt;</span>
    Email: <span class="nt">&lt;input</span> <span class="na">type=</span><span class="s">'text'</span> <span class="na">name=</span><span class="s">'email'</span><span class="nt">&gt;&lt;br/&gt;</span>
