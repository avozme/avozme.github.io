    <span class="nt">&lt;script&gt;</span>
        <span class="kd">const</span> <span class="nx">misTareas</span> <span class="o">=</span> <span class="p">{</span>
            <span class="na">template</span><span class="p">:</span> <span class="s2">`&lt;div&gt;
                            &lt;ul&gt;
