   <span class="kd">var</span> <span class="nx">n</span> <span class="o">=</span> <span class="nx">prompt</span><span class="p">(</span><span class="dl">"</span><span class="s2">Dime un n√∫mero</span><span class="dl">"</span><span class="p">);</span>
